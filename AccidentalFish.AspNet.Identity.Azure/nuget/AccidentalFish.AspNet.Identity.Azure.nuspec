    <title>ASP.Net 4.5 Azure Identity Helpers</title>
    <authors>James Randall</authors>
    <owners>James Randall</owners>
    <licenseUrl>https://raw.github.com/JamesRandall/AccidentalFish.AspNet.Identity.Azure/master/LICENSE</licenseUrl>
